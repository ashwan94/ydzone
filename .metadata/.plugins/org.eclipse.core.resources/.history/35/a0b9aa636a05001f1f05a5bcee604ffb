	const priceEl = document.querySelectorAll(".price");
	
	priceEl.forEach(el => {
		if(el == null) {
			console.log("There are no any price elements");
		} else{			
			el.innerText = parseInt(el.innerText).toLocaleString() + "원";
		}
	})

