<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="menu.MenuMapper">
	<insert id="insertMenuInfo" parameterType="menuVO">
		insert into menu
			(restaurant_id, menu_name, price, category)
		values
			(#{newRstNo}, #{menuName}, #{price}, #{category})
	</insert>
	
	<select id="getNewRestaurantInfo" parameterType="int" resultType="rstVO">
		select *
		from restaurant r
		where r.no = #{no}
	</select>
	
	<select id="getMenuList" parameterType="int" resultType="menuVo">
		select
			m.menu_name, m.price, m.category
		from
			restaurant r, menu m
		where
			#{no} = m.restaurant_no
	</select>
</mapper>